<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.afrometal.radoslaw.simpleobjectcreator.MainActivity">

    <TextView
        android:id="@+id/tv_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="40dp"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/tv_start_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_info"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp" />

    <Button
        android:id="@+id/b_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start creating"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_start_info"
        android:layout_marginTop="16dp"
        android:onClick="startCreating" />

</RelativeLayout>
